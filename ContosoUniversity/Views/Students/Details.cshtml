@model ContosoUniversity.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="container student-details">
    <h1 class="page-title">Student Details</h1>

    <div class="card student-card">
        <div class="card-body">
            <h4 class="card-title">Student Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.LastName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.LastName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FirstMidName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FirstMidName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EnrollmentDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EnrollmentDate)</dd>
            </dl>

            <hr />

            <h4 class="mt-4">Enrollments</h4>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-header">
                        <tr>
                            <th>Course Title</th>
                            <th>Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Enrollments)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Course.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.Grade)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
